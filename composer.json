{
  "name": "school/cbt-system",
  "description": "Laravel backend skeleton for CBT System",
  "license": "proprietary",

  "minimum-stability": "stable",
  "prefer-stable": true,

  "require": {
    "php": "^8.1",
    "laravel/framework": "^10.0",
    "laravel/sanctum": "^3.3",
    "spatie/laravel-permission": "^6.0",
    "maatwebsite/excel": "^3.1",
   "barryvdh/laravel-dompdf": "^2.0"
  },

  "autoload": {
    "psr-4": {
      "App\\": "backend/app/",
      "Database\\Factories\\": "backend/database/factories/",
      "Database\\Seeders\\": "backend/database/seeders/"
    }
  },

  "autoload-dev": {
    "psr-4": {
      "Tests\\": "backend/tests/"
    }
  },

  "scripts": {
    "post-autoload-dump": [
      "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
      "@php backend/artisan package:discover --ansi || true"
    ],
    "post-root-package-install": [
      "@php -r \"file_exists('backend/.env') || copy('backend/.env.example', 'backend/.env');\""
    ],
    "post-create-project-cmd": [
      "@php backend/artisan key:generate --ansi"
    ]
  }
}
